            <mvc:exclude-mapping path="/html/*"/>
            <bean class="com.leslia.rest.base.AllInterceptor"></bean>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/inter/*"/>
            <bean class="com.leslia.rest.base.Interceptor1"></bean>
        </mvc:interceptor>
    </mvc:interceptors>-->



    <bean id="redisHttpSessionConfiguration" class="org.springframework.session.data.redis.config.annotation.web.http.RedisHttpSessionConfiguration">
        <property name="maxInactiveIntervalInSeconds" value="1800" />
    </bean>

    <bean id="propertyConfigurer" class="com.leslia.plugin.Encrypt">
        <property name="locations">
            <list>
                <value>classpath:conf/redis.properties</value>
            </list>
        </property>
    </bean>

    <import resource="classpath:spring/redis.xml"></import>
    <import resource="classpath:spring/mq-sender.xml"></import>
    <import resource="classpath:spring/spring-shiro.xml"></import>
    <import resource="classpath:spring/dubbo-consumer.xml"></import>



</beans>